<Page x:Class="PointOfSale.EntreeSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntreeSelection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Column="1" Grid.Row="1">
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="MinWidth" Value="150"/>
                    <Setter Property="MinHeight" Value="150"/>
                    <Setter Property="Margin" Value="10" />
                </Style>
            </WrapPanel.Resources>
            <Button x:Name="BtnAddBrontowurst" VerticalContentAlignment="Bottom" Click="AddBrontowurst">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/DinoDiner-01.png"></ImageBrush>
                </Button.Background>
                Brontowurst
            </Button>
            <Button x:Name="BtnAddDinoBuggets" VerticalContentAlignment="Bottom" Click="AddDinoNuggets">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/DinoDiner-02.png"></ImageBrush>
                </Button.Background>
                Dino-Nuggets
            </Button>
            <Button x:Name="BtnAddSteakosaurus" VerticalContentAlignment="Bottom" Click="AddSteakosaurus">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/DinoDiner-05.png"></ImageBrush>
                </Button.Background>
                Steakosaurus
            </Button>
            <Button x:Name="BtnAddTRexKingBurger" VerticalContentAlignment="Bottom" Click="AddTRexKingBurger">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/DinoDiner-06.png"></ImageBrush>
                </Button.Background>
                T-Rex King Burger
            </Button>
            <Button x:Name="BtnAddPterodactylWings" VerticalContentAlignment="Bottom" Click="AddPterodactylWings">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/DinoDiner-04.png"></ImageBrush>
                </Button.Background>
                Pterodactyl Wings
            </Button>
            <Button x:Name="BtnAddPrehistoricPBJ" VerticalContentAlignment="Bottom" Click="AddPrehistoricPBJ">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/DinoDiner-03.png"></ImageBrush>
                </Button.Background>
                Prehistoric PB&amp;J
            </Button>
            <Button x:Name="BtnAddVelociwrap" VerticalContentAlignment="Bottom" Click="AddVelociWrap">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/DinoDiner-07.png"></ImageBrush>
                </Button.Background>
                VelociWrap
            </Button>
        </WrapPanel>
    </Grid>
</Page>
